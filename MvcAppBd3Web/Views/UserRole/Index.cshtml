@{
    ViewBag.Title = "Danh sách quyền hạn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model MvcAppBd3Web.Models.UserRoleModels

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2>Danh sách quyền hạn hệ thống</h2>
                <div class="panel-ctrls">
                </div>
            </div>
            <div class="panel-body panel-no-padding">
                <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Stt</th>
                            <th>Tên quyền</th>
                            <th>Mô tả</th>
                            <th>Thời gian tạo</th>
                            <th>Chức năng</th>                           
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.ListUserRole.Count; i++)
                        {
                            var userItem = Model.ListUserRole[i];
                            <tr class="@(i % 2 == 0 ? "odd" : "even") gradeX">
                                <td>@i</td>
                                <td>@userItem.RoleName</td>
                                <td>@userItem.Description</td>
                                <td class="center"> @userItem.ModifiedDate</td>
                                <td class="center"><a href="/UserRole/Action/@userItem.ID" class="btn btn-default btn-xs btn-label"><i class="fa fa-pencil"></i>Sửa</a></td>                                
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="panel-footer"></div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="/assets/admin/Table.js"></script>
<script type="text/javascript" src="/assets/admin/UserRole.js"></script>
