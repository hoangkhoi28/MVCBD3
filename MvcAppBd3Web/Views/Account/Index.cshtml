@{
    ViewBag.Title = "Danh sách người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model MvcAppBd3Web.Models.AccountModels

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2>Danh sách thông tin người dùng</h2>
                <div class="panel-ctrls">
                </div>
            </div>
            <div class="panel-body panel-no-padding">
                <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Stt</th>
                            <th>Tên tài khoản</th>
                            <th>Email</th>
                            <th>Tên quyền</th>
                            <th>Tên Đvhc</th>
                            <th>Trạng thái</th>
                            <th>Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.ListUser.Count; i++)
                        {
                            var userItem = Model.ListUser[i];
                            <tr class="@(i % 2 == 0 ? "odd" : "even") gradeX">
                                <td>@i</td>
                                <td>@userItem.UserName</td>
                                <td>@userItem.Email</td>
                                <td class="center"> @userItem.RoleName</td>
                                <td class="center">@userItem.NameDVHC</td>
                                <td class="center" id="idviewStatus-@userItem.ID">@(userItem.Status == 1 ? "Đang hoạt động" : "Tạm khóa")</td>
                                <td class="center"><a id="idviewAction-@userItem.ID" href="javascript:void(0);" onclick="return toBlock(@userItem.Status,@userItem.ID);">@(userItem.Status == 1 ? "Tạm khóa" : "Mở hoạt động")</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="panel-footer"></div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="/assets/admin/Table.js"></script>
<script type="text/javascript" src="/assets/admin/Account.js"></script>
